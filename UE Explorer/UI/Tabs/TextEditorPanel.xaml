<UserControl x:Class="UEExplorer.UI.Tabs.TextEditorPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="426" d:DesignWidth="514" xmlns:avalonedit="http://icsharpcode.net/sharpdevelop/avalonedit">
		<avalonedit:TextEditor Name="textEditor" ShowLineNumbers="True" IsReadOnly="True" FontSize="14" FontFamily="Courier New" FontWeight="Normal" FontStyle="Normal" Grid.RowSpan="5" LineNumbersForeground="DarkCyan">
			<avalonedit:TextEditor.ContextMenu>
				<ContextMenu Name="contextMenu">	
					<MenuItem Header="Copy" Name="copy"/>
					<MenuItem Header="Search UnrealWiki" Name="searchWiki"/>
			</ContextMenu>
			</avalonedit:TextEditor.ContextMenu>
		</avalonedit:TextEditor>
</UserControl>
